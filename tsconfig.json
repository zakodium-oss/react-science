{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "types": ["vite/client"],
    "target": "ES2022",
    "outDir": "lib",
    "jsx": "react-jsx",
    "module": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    ".storybook",
    "src",
    "stories",
    "tests",
    "playwright",
    "playwright-*.mts",
    "vite.config.mts"
  ],
  "exclude": ["node_modules"]
}
